@model CarSellingPlatform.ViewModels.Ads.EditCategoryVM
@using Common.Enums

@{
    this.Layout = "/Views/Shared/Site.cshtml";
}

<div class="centered-container">
    <form action="/Ads/EditCategory" method="post">
        @Html.HiddenFor(m => m.Id)
        <div class="grid-2">
            <div class="row">
                <div class="col-1">Name of category("Rent","Sale","Donor", "Leasing")</div>
                <div class="col-2">@Html.TextBoxFor(m => m.CategoryName)</div>
                <div class="col-3">
                    @Html.ValidationMessageFor(m => m.CategoryName)
                </div>
            </div>
            <div class="row">
                <div class="col-3">
                    @Html.ValidationMessage("authError")
                </div>
            </div>
            <div class="row">
                <div class="col-3">
                    <input type="submit" value="Save" />
                    <a href="/Home/GoProfile">Back</a>
                </div>
            </div>
        </div>
    </form>
</div>
