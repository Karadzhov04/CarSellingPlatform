@model CarSellingPlatform.ViewModels.Home.EditVM

@{
    this.Layout = "/Views/Shared/Site.cshtml";
}

<div class="centered-container">
    <form action="/Home/Edit" method="post">
        @Html.HiddenFor(m => m.Id)
        <div class="grid-2">
            <div class="row">
                <div class="col-1">Username</div>
                <div class="col-2">
                    @Html.TextBoxFor(m => m.Username)
                </div>
                <div class="col-3">
                    @Html.ValidationMessageFor(m => m.Username)
                </div>
            </div>
            <div class="row">
                <div class="col-1">Password</div>
                <div class="col-2">
                    @Html.PasswordFor(m => m.Password)
                </div>
                <div class="col-3">
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
            </div>
            <div class="row">
                <div class="col-1">First Name</div>
                <div class="col-2">
                    @Html.TextBoxFor(m => m.FName)
                </div>
                <div class="col-3">
                    @Html.ValidationMessageFor(m => m.FName)
                </div>
            </div>
            <div class="row">
                <div class="col-1">Last Name</div>
                <div class="col-2">
                    @Html.TextBoxFor(m => m.LName)
                </div>
                <div class="col-3">
                    @Html.ValidationMessageFor(m => m.LName)
                </div>
            </div>
            <div class="row">
                <div class="col-1">Email</div>
                <div class="col-2">
                    @Html.TextBoxFor(m => m.Email)
                </div>
                <div class="col-3">
                    @Html.ValidationMessageFor(m => m.Email)
                </div>
            </div>
            <div class="row">
                <div class="col-1">Phone</div>
                <div class="col-2">
                    @Html.TextBoxFor(m => m.Phone)
                </div>
                <div class="col-3">
                    @Html.ValidationMessageFor(m => m.Phone)
                </div>
            </div>
            <div class="row">
                <div class="col-3">
                    <input type="submit" value="Save" />
                    <a href="/Home/GoProfile">Back</a>
                </div>
            </div>
        </div>
    </form>
</div>
